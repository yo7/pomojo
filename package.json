{
  "name": "pomojuice",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint": "xo --silent",
    "lint:fix": "xo --fix",
    "test": "npm run lint && npm run test:e2e && npm run test:unit",
    "test:e2e": "NODE_ENV=test ava e2e/**/*.test.js",
    "test:unit": "NODE_ENV=test ava src/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yo7/pomojuice.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yo7/pomojuice/issues"
  },
  "homepage": "https://github.com/yo7/pomojuice#readme",
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": false}]
    },
    "space": true,
    "semicolon": false
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "react-addons-test-utils": "^15.6.0",
    "spectron": "^3.7.2",
    "standard": "^10.0.3",
    "styled-components": "^2.1.2",
    "webpack": "^3.5.5",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  }
}
